{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitOverride": true,
    "module": "commonjs"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
